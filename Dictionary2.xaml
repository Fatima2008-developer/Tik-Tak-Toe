<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="CheckBox" x:Key="Tbc">

        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="BorderBrush" Value="#CCCCCC"/>
    </Style>


    <Color x:Key="Primarybgd">
        #FAFAFA
    </Color>

    <SolidColorBrush x:Key="BackGround" Color="{StaticResource Primarybgd}"/>


    <Style TargetType="TextBlock" x:Key="textblock">
        <Setter Property="Background" Value="#FAFAFA"/>
        <Setter Property="Padding" Value="6"/>
        <Setter Property="FontSize" Value="100"/>
        <Setter Property="Foreground" Value="#212121"/>
        <Setter Property="FontWeight" Value="ExtraBold"/>

        <Setter Property="FontFamily" Value="Consolas"/>


    </Style>
    <Style TargetType="TextBlock" x:Key="textblock1">
        <Setter Property="Background" Value="#757575"/>
        <Setter Property="Padding" Value="6"/>
        <Setter Property="FontSize" Value="100"/>
        <Setter Property="Foreground" Value="#FFFFFF"/>
        <Setter Property="FontWeight" Value="ExtraBold"/>

        <Setter Property="FontFamily" Value="Consolas"/>


    </Style>


    <Style TargetType="Button" x:Key="mybutton">
        <Setter Property="Background" Value="#F0F0F0"/>

        <Setter Property="BorderBrush" Value="#CCCCCC"/>

        <Setter Property="BorderThickness" Value="4"/>
        <Setter Property="Padding" Value="4"/>
        <Setter Property="Foreground" Value="#1A73E8"/>

        <Setter Property="FontFamily" Value="Consolas"/>


        <Setter Property="FontWeight" Value="Bold"/>

        <Setter Property="Template" >
            <Setter.Value>

                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    CornerRadius="1">
                        <ContentPresenter HorizontalAlignment="Center" 
                              VerticalAlignment="Center" RecognizesAccessKey="True"/>
                    </Border>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="WhiteSmoke"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="LightGray" />

                        </Trigger>
                    </ControlTemplate.Triggers>

                </ControlTemplate>
            </Setter.Value>

        </Setter>
    </Style>





</ResourceDictionary>